code = "shader_type canvas_item;

uniform sampler2D perlin;

uniform int OCTAVES = 4;

float rand(vec2 coord){
	return fract(sin(dot(coord, vec2(56, 78)) * 1000.0) * 1000.0);
}

float noise(vec2 coord){
	vec2 i = floor(coord);
	vec2 f = fract(coord);

	// 4 corners of a rectangle surrounding our point
	float a = rand(i);
	float b = rand(i + vec2(1.0, 0.0));
	float c = rand(i + vec2(0.0, 1.0));
	float d = rand(i + vec2(1.0, 1.0));

	vec2 cubic = f * f * (3.0 - 2.0 * f);

	return mix(a, b, cubic.x) + (c - a) * cubic.y * (1.0 - cubic.x) + (d - b) * cubic.x * cubic.y;
}

float fbm(vec2 coord){
	float value = 0.5;
	float scale = 0.5;

	for(int i = 0; i < OCTAVES; i++){
		value += noise(coord) * scale;
		coord *= 2.0;
		scale *= 0.5;
	}
	return value;
}


void fragment(){
    vec3 color1 = vec3((1.0+sin(TIME/6.0))/5f, (1.0+sin(TIME/6.0+45.0))/5f, (1.0+sin(TIME/6.0+90.0))/4f);
    //vec3 color2 = vec3(0.047, 0.129, 0.180);
	vec3 color2 = vec3(0.1, 0.26, 0.36);
    vec3 color = mix(color1, color2, (UV.x + UV.y)/2.0);
	
	float final = texture(perlin, UV + TIME / -40.0).r / 35.0;
	
	// vec2 motion = vec2( fbm((UV * 20.0) + TIME) );
	// float final = fbm((UV * 20.0) + motion) / 100.0;
	
    COLOR = vec4(color.r + final, color.g + final, color.b + final, 1);
}"

